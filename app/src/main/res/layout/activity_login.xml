<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <EditText
        android:id="@+id/id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="ID"
        android:textAlignment="center"
        android:background="@drawable/login_edittext_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textSize="15dp"
        android:paddingHorizontal="15dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="PW"
        android:textAlignment="center"
        android:background="@drawable/login_edittext_border"
        app:layout_constraintBottom_toTopOf="@id/check"
        app:layout_constraintTop_toBottomOf="@id/id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:paddingHorizontal="15dp"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_checkbox_background"
        app:layout_constraintStart_toStartOf="@id/pw"
        app:layout_constraintEnd_toStartOf="@id/login_state"
        app:layout_constraintTop_toBottomOf="@id/pw"
        app:layout_constraintBottom_toTopOf="@id/login_button"

        />

    <TextView
        android:id="@+id/login_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="로그인 상태 유지"
        android:textColor="#707070"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/check"
        app:layout_constraintTop_toBottomOf="@id/pw"
        app:layout_constraintBottom_toTopOf="@id/login_button"
        />

    <android.widget.Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:background="@drawable/login_button_background"
        app:layout_constraintTop_toBottomOf="@id/check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/find_pw"
        android:layout_marginTop="20dp"
        />





    <TextView
        android:id="@+id/find_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="아이디 찾기"
        android:textSize="12dp"
        android:textColor="#707070"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bar1"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/bar1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="|"
        android:textSize="12dp"
        android:textColor="#707070"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toEndOf="@id/find_id"
        app:layout_constraintEnd_toStartOf="@id/find_pw"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/find_pw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="비밀번호 찾기"
        android:textSize="12dp"
        android:textColor="#707070"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toEndOf="@id/find_id"
        app:layout_constraintEnd_toStartOf="@id/join"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/bar2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="|"
        android:textSize="12dp"
        android:textColor="#707070"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toEndOf="@id/find_pw"
        app:layout_constraintEnd_toStartOf="@id/join"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text=" 회원가입"
        android:textSize="12dp"
        android:textColor="#707070"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toEndOf="@id/bar2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />



    <ImageButton
        android:id="@+id/google_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/google_logo"
        android:scaleType="centerCrop"
        android:background="#FFFFFF"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/kakao_button"
        app:layout_constraintTop_toBottomOf="@id/bar1"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageButton
        android:id="@+id/kakao_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/kakao_logo"
        android:scaleType="centerCrop"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/google_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar2"

        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>